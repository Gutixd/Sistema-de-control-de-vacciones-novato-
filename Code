
print("****************************************")
print("* Sistema de control vacacional Rappi  *")
print("****************************************")

nombre_empleado = input(" Por favor ingrese el nombre del empleado: ")
clave_departamento = int(input(" Poe favor introduce la clave del departamento "))
antiguedad_empleado = float(input(" Por favor introduce los aÃ±os laborales del empleado "))


if clave_departamento == 1:
    if antiguedad_empleado >= 1 and antiguedad_empleado < 2:
        print("El empleado", nombre_empleado, "Tiene derecho a 6 dias de vacacciones "  )
    elif antiguedad_empleado >=2 and antiguedad_empleado <= 6:
        print("El empleado", nombre_empleado, "Tiene derecho a 14 dias de vacacciones "  )
    elif antiguedad_empleado >=7:
        print("El empleado", nombre_empleado, "Tiene derecho a 20 dias de vacacciones "  )
    else:    
        print("El empleado", nombre_empleado, " Aun no tiene derechos a vacacciones "  )






elif clave_departamento == 2:

    if antiguedad_empleado >= 1 and antiguedad_empleado < 2:
        print("El empleado", nombre_empleado, "Tiene derecho a 7 dias de vacacciones "  )
    elif antiguedad_empleado >=2 and antiguedad_empleado <= 6:
        print("El empleado", nombre_empleado, "Tiene derecho a 15 dias de vacacciones "  )
    elif antiguedad_empleado >=7:
        print("El empleado", nombre_empleado, "Tiene derecho a 22 dias de vacacciones "  )
    else:    
        print("El empleado", nombre_empleado, " Aun no tiene derechos a vacacciones "  )



elif clave_departamento == 3:
        
    if antiguedad_empleado >= 1 and antiguedad_empleado < 2:
        print("El empleado", nombre_empleado, "Tiene derecho a 10 dias de vacacciones "  )
    elif antiguedad_empleado >=2 and antiguedad_empleado <= 6:
        print("El empleado", nombre_empleado, "Tiene derecho a 20 dias de vacacciones "  )
    elif antiguedad_empleado >=7:
        print("El empleado", nombre_empleado, "Tiene derecho a 30 dias de vacacciones "  )
    else:    
        print("El empleado", nombre_empleado, " Aun no tiene derechos a vacacciones "  )




else:
    print("La clave de departamento no existe, vuelve a intentarlo ")
